<?xml version="1.0"?>
<project name="elb" basedir="." default="build">
    <property name="web.dir" value="/var/lib/tomcat7/webapps/rws_d/WEB-INF" />
    <property name="src.dir" value="." />
    <property name="build.dir" value="${web.dir}/classes" />
    <property name="name" value="elb"/>

    <path id="master-classpath">
        <fileset dir="${web.dir}/lib">
            <include name="*.jar"/>
        </fileset>
        <pathelement path="${build.dir}"/>
    </path>

    <target name="build" description="Compile source java files">
        <javac destdir="${build.dir}" includeantruntime="false" target="1.6" source="1.6" >
            <src path="${src.dir}"/>
            <classpath refid="master-classpath"/>
        </javac>
    </target>
 
</project>

